@page
@model Zero.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Clients";
    ViewData["Active"] = "Clients";
}

<h1>Clients</h1>

<p>
    <a asp-page="Create">Create New Client</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Client)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    @*<a asp-page="./Details" asp-route-id="@item.ID">Details</a> | *@
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>

   @*<tfoot>
        <tr>
            <td colspan="1"><b>Total Projects:</b></td>
            <td><b>@Model.Client.Count() </b></td>
        </tr>
    </tfoot>*@

</table>
