@model Zero.Pages.Apr20Payrolls.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Apr20 Payroll</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Apr20Payroll.EmployeeID" />

            <div class="form-group">
                <label asp-for="Apr20Payroll.Deduction" class="control-label"></label>
                <input asp-for="Apr20Payroll.Deduction" class="form-control" />
