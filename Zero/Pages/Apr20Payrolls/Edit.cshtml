            </div>
            <div class="form-group">
                <label asp-for="Apr20Payroll.OvertimeHours" class="control-label"></label>
                <input asp-for="Apr20Payroll.OvertimeHours" class="form-control" />
                <span asp-validation-for="Apr20Payroll.OvertimeHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apr20Payroll.Bonus" class="control-label"></label>
                <input asp-for="Apr20Payroll.Bonus" class="form-control" />
                <span asp-validation-for="Apr20Payroll.Bonus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
